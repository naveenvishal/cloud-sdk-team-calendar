<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:unified="sap.ui.unified"
	xmlns:core="sap.ui.core">
	<VBox>
		<PlanningCalendar
			id="PlanningCalendar"
			startDate="{path: '/startDate'}"
			viewKey="Day"
			rows="{/people}"
			appointmentsVisualization="Filled"
			showEmptyIntervalHeaders="false"
			showWeekNumbers="true"
			rowSelectionChange=".rowSelectionHandler"
			startDateChange=".startDateChangeHandler"
			viewChange=".viewChangeHandler">
			<toolbarContent>
				<Label labelFor="PlanningCalendarTeamSelector" text="Calendar for: "/>
				<Select id="PlanningCalendarTeamSelector"
					change=".selectChangeHandler">
					<core:Item
						key="Team"
						text="Team"/>
				</Select>
				<Button
					id="PlanningCalendarCreateAppointmentButton"
					text="Create"
					press=".appointmentCreate"
					tooltip="Create new appointment"/>
			</toolbarContent>
			<views>
				<PlanningCalendarView
					key="Day"
					intervalType="Hour"
					description="Day"
					intervalsS="3"
					intervalsM="6"
					intervalsL="12"
					showSubIntervals="true">
				</PlanningCalendarView>
				<PlanningCalendarView
					key="Week"
					intervalType="Week"
					description="Week"
					intervalsS="1"
					intervalsM="2"
					intervalsL="7"
					showSubIntervals="true">
				</PlanningCalendarView>
				<PlanningCalendarView
					key="OneMonth"
					intervalType="OneMonth"
					description="Month">
				</PlanningCalendarView>
			</views>
			<rows>
				<PlanningCalendarRow
					icon="{pic}"
					title="{name}"
					text="{role}"
					appointments="{path : 'appointments', templateShareable: true}">
					<appointments>
						<unified:CalendarAppointment
							startDate="{start}"
							endDate="{end}"
							icon="{pic}"
							title="{title}"
							text="{info}"
							type="{type}"
							tentative="{tentative}">
						</unified:CalendarAppointment>
					</appointments>
					<intervalHeaders>
						<unified:CalendarAppointment
							startDate="{start}"
							endDate="{end'}"
							icon="{pic}"
							title="{title}"
							type="{type}">
						</unified:CalendarAppointment>
					</intervalHeaders>
				</PlanningCalendarRow>
			</rows>
		</PlanningCalendar>
	</VBox>
</core:FragmentDefinition>