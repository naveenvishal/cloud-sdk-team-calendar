<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:u="sap.ui.unified">
	<ResponsivePopover
			title="Calendar Legend"
			placement="Bottom"
			showHeader="false">
		<PlanningCalendarLegend
				appointmentItems="{
					path : '/legendAppointmentItems',
					templateShareable: true
				}">
			<appointmentItems>
				<u:CalendarLegendItem
					text="{text}"
					type="{type}"
					tooltip="{text}" />
			</appointmentItems>
		</PlanningCalendarLegend>
	</ResponsivePopover>
</core:FragmentDefinition>